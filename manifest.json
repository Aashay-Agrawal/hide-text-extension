{
  "manifest_version": 2,
  "name": "Hide All Text (Opacity Toggle)",
  "version": "1.2",
  "description": "Toggle to hide/show all text on websites using opacity (no layout shift).",
  "permissions": ["tabs", "<all_urls>"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "48": "icon.png"
  }
}
